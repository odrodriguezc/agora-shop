# Handle line endings automatically for files detected as text
* text=auto

# Rails encrypted credentials
config/credentials/*.yml.enc diff=rails_credentials
config/credentials.yml.enc diff=rails_credentials

# Force LF line endings for specific file types
*.rb text eol=lf
*.yml text eol=lf
*.md text eol=lf
*.json text eol=lf
*.js text eol=lf
*.css text eol=lf
*.html text eol=lf

# Don't modify line endings for binary files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.pdf binary

# Ignore file mode (permission) changes
* -text
